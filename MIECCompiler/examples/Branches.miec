(* example with conditional branches *)

PROGRAM Branches
BEGIN_VAR
	a: Integer;
	b: Integer;
END_VAR
BEGIN
	a := 1;
	b := 0;
	
	IF a = b THEN print(1); ELSE print(0); END
	IF a != b THEN print(1); ELSE print(0); END
	
	IF a < b THEN print(1); ELSE print(0); END
	IF a > b THEN print(1); ELSE print(0); END
	
	IF a <= b THEN print(1); ELSE print(0); END
	IF a >= b THEN print(1); ELSE print(0); END
	
END